<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.mealerapp.screens.LogInFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_FirstFragment_to_register_client2"
            app:destination="@id/register_client2" />
        <action
            android:id="@+id/action_FirstFragment_to_register_cook2"
            app:destination="@id/register_cook2" />
        <action
            android:id="@+id/action_FirstFragment_to_welcome_screen"
            app:destination="@id/admin_screen" />
        <action
            android:id="@+id/login_to_cookWelcomeScreen"
            app:destination="@id/cookWelcomeScreen" />
        <action
            android:id="@+id/login_to_clientWelcome"
            app:destination="@id/clientFragmentWelcomeScreen" />
    </fragment>
    <fragment
        android:id="@+id/register_client2"
        android:name="com.example.mealerapp.screens.register_client"
        android:label="fragment_register_client"
        tools:layout="@layout/fragment_register_client" >
        <action
            android:id="@+id/registerClient_to_clientWelcome"
            app:destination="@id/clientFragmentWelcomeScreen" />
    </fragment>
    <fragment
        android:id="@+id/register_cook2"
        android:name="com.example.mealerapp.screens.register_cook"
        android:label="fragment_register_cook"
        tools:layout="@layout/fragment_register_cook" >
        <action
            android:id="@+id/registerCook_to_cookWelcomeScreen"
            app:destination="@id/cookWelcomeScreen" />
    </fragment>
    <fragment
        android:id="@+id/admin_screen"
        android:name="com.example.mealerapp.screens.adminWelcomeScreen"
        android:label="Welcome Screen"
        tools:layout="@layout/fragment_admin_screen" />
    <fragment
        android:id="@+id/cookWelcomeScreen"
        android:name="com.example.mealerapp.screens.cookWelcomeScreen" >
        <action
            android:id="@+id/cookWelcome_to_listOfMeals"
            app:destination="@id/cookListMeals" />
    </fragment>
    <fragment
        android:id="@+id/cookListMeals"
        android:name="com.example.mealerapp.screens.cookListMeals"
        android:label="fragment_cook_list_meals"
        tools:layout="@layout/fragment_cook_list_meals" />
    <fragment
        android:id="@+id/clientFragmentWelcomeScreen"
        android:name="com.example.mealerapp.screens.clientWelcomeScreen"
        android:label="fragment_client_welcome_screen"
        tools:layout="@layout/fragment_client_welcome_screen" >
        <action
            android:id="@+id/clientWelcome_to_findMeal"
            app:destination="@id/findMeals" />
        <action
            android:id="@+id/clientWelcome_to_purchaseRequest"
            app:destination="@id/clientPurchaseRequestsScreen" />
    </fragment>
    <fragment
        android:id="@+id/findMeals"
        android:name="com.example.mealerapp.screens.findMealsScreen"
        android:label="fragment_find_meals"
        tools:layout="@layout/fragment_find_meals" />
    <fragment
        android:id="@+id/clientPurchaseRequestsScreen"
        android:name="com.example.mealerapp.screens.clientPurchaseRequestsScreen"
        android:label="fragment_client_purchase_requests"
        tools:layout="@layout/fragment_client_purchase_requests" />
</navigation>